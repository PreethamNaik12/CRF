<%= stylesheet_link_tag "announcement"%>

<%= form_with(model: announcement) do |form| %>
  <% if announcement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
        <% announcement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="form">
    <div class="input-group mb-3 mt-3">
      <%= form.label :heading , class:'input-group-text' %>
      <%= form.text_area :heading, class:"form-control", placeholder:"Heading goes here...."  %>
    </div>
    <div class="input-group mb-3">
      <%= form.label :text , class:'input-group-text' %>
      <%= form.text_area :text, class:"form-control", placeholder:"Content goes here...." %>
    </div>
    <div class="input-group mb-3">
      <%= form.label :created_on , class:'input-group-text' %>
      <%= form.datetime :created_on, class:"form-select"%>
    </div>
    <div class="input-group mb-3">
      <%= form.submit "Create", class:"btn btn-primary", id:'sbt' %>
    </div>
  </div>
<% end %>
